html
	include partials/head.pug
	include partials/navigation.pug
	script(src='scripts/messages.js')

	body
		.container
			h1.col-md-8.col-md-offset-2.text-center Messages 
			.col-md-1
				.button.btn.btn-success.btn-lg(data-toggle="modal" data-target="#myModal") Add
			.col-md-10.col-md-offset-1
				table.table.table-striped
					thead
						tr
							th Message
							th Date
							th 
					tbody#recipientstable
			#myModal.modal.fade(role='dialog')
				.modal-dialog
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal') Ã—
							h4.modal-title.text-center New Message
						.modal-body.form-horizontal.col-sm-10.col-sm-offset-1
							form#addMessageForm
								fieldset
									.form-group
										label.control-label(for="inputMessage") Message (Max 160 char)
										br
										input#inputNumber.form-control(type="text", placeholder="Message ")
									.form-group
										label.control-label(for="none") Send via								
										.checkbox
											label
												input#inputSMS(type='checkbox')
												|  SMS
										.checkbox
											label
												input#inputEmail(type='checkbox')
												|  Email
									.form-group
										label(for='inputEvenet') Message Type
										select#actionType.form-control
											option Birthday
											option Christmas
											option Valentines
											option Custom
									.form-group#datePicker
										label.control-label(for="inputDate")  Date
										br
										input#inputFirstName.form-control(type="date")
									.form-group
										button.btn.btn-default(type='button', data-dismiss='modal') Cancel
										button.message-submit.btn.btn-success.pull-right(type="button", data-dismiss='modal') Add
						.modal-footer


